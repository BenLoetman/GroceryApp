@model GroceryApp.Models.Items

@{
    ViewData["Title"] = "Delete";
}

<!--

    Uses Item Model to get the data of the item that was selected to be deleted.
    Displays data of item and delete button. When button is pressed it calls the method Delete, which deletes the record.

-->


<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="text-center">Delete</h1>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h3>Are you sure you want to delete this?</h3>
        </div>
    </div>
    <hr />
    <div class="row mb-4">
        <div class="col">
            <div class="row">
                <div class="col-1 offset-lg-2">
                    <h5>@Html.DisplayNameFor(model => model.ItemName):</h5>
                </div>
                <div class="col text-center">
                    <div>@Html.DisplayFor(model => model.ItemName)</div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="row">
                <div class="col-1 offset-lg-1">
                    <h5>@Html.DisplayNameFor(model => model.ItemDescription):</h5>
                </div>
                <div class="col text-center">
                    <div>@Html.DisplayFor(model => model.ItemDescription)</div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col offset-lg-2">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
    <div class="col">
        <a asp-action="Index">Back to List</a>
    </div>

</div>
